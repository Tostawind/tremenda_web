<script>
    const textEmail = document.getElementById('text-email');
    let isClickEnabled = true;

    let tl = gsap.timeline();


    textEmail?.addEventListener('click', () => {
        // Prevent second click in 1s
        if(isClickEnabled) {
            isClickEnabled = false

            // Save in clipboard
            navigator.clipboard.writeText('info@tremenda.web')
                .then(() => {
                    console.log('Texto copiado al portapapeles')
                })
                .catch(err => {
                    console.error('Error al copiar al portapapeles:', err)
                })
    
            // Tooltip animation
            tl.fromTo('#email-tooltip', {
                y: 50,
                opacity: 0,
                ease: 'bounce.out',
            },{
                y: 0,
                opacity: 1,
                ease: 'bounce.out',
            });

            tl.to('#email-tooltip', {
                delay: 2,
                y: 50,
                opacity: 0,
            });
            
            // Enable click in 1s
            setTimeout(() => {
                isClickEnabled = true;
            }, 3000);
        }
    })




