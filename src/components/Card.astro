---
interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="relative flex md:flex-row flex-col md:gap-10 gap-8 lg:h-60 md:h-72 h-auto bg-white rounded-lg overflow-hidden shadow-md">
    <div class="flex-1 md:p-10 px-6 pb-10 h-full md:order-1 order-2">
        <h2 class="headline-5">{title}</h2>
        <p class="text" set:html={description}></p>
    </div>
    <div class="md:w-1/3 md:h-full h-48 md:order-2 order-1">
        <img class="h-full w-full object-cover" src={image} alt="Chess">
    </div>
</div>