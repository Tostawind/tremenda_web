---
interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="relative flex gap-10 h-60 bg-white rounded-lg overflow-hidden shadow-md">
    <div class="flex-1 p-10 h-full">
        <h2 class="headline-5">{title}</h2>
        <p class="text" set:html={description}></p>
    </div>
    <div class="w-1/3 h-full">
        <img class="h-full w-full object-cover" src={image} alt="Chess">
    </div>
</div>