<section class="flex justify-center items-center h-[calc(100vh-112px)] overflow-hidden">
    
    <div class="flex justify-between items-center w-full max-w-5xl">
        <!-- LEFT -->
        <div class="space-y-8">
            <h1 class="text-8xl font-extrabold">
                ZAZ <br>
                968M
            </h1>
        
            <h3 class="text-accent text-2xl font-extrabold">ZAPOROZHETIC</h3>
        
            <p class="font-extrabold text-xl leading-6">
                LEGENDARY <br>
                SOVIET <br>
                CAR
            </p>
        </div>
        <!-- RIGHT -->
        <div class="relative h-full w-1/2 p-20">
            <div class="h-full w-full relative">
                <!-- BULB -->
                <div class="bulb | relative">
                    <img class="h-full w-full object-contain opacity-100" src="public/bulp.svg" />
                    <div class="light | absolute bottom-full left-0 translate-y-8 -rotate-45 h-14 w-7 bg-accent" style="clip-path: polygon(29% 0, 66% 0, 57% 100%, 40% 100%)"></div>
                    <div class="light | absolute bottom-full left-1/2 -translate-x-1/2 -translate-y-4 h-24 w-12 bg-accent" style="clip-path: polygon(29% 0, 66% 0, 57% 100%, 40% 100%)"></div>
                    <div class="light | absolute bottom-full right-0 translate-y-8 rotate-45 h-14 w-7 bg-accent" style="clip-path: polygon(29% 0, 66% 0, 57% 100%, 40% 100%)"></div>
                </div>

                <div class="scissors | absolute h-full w-full top-0">
                    <img class="scissors-top | relative -translate-y-8 z-10 h-full w-full object-contain" src="/scissors-top.svg" />
                    <img class="scissors-bottom | absolute top-0 translate-y-4 h-full w-full object-contain" src="/scissors-bottom.svg" />
                </div>
            </div>
            <!-- SQUARE -->
            <div class="absolute left-0 top-full bg-accent w-full h-20"></div>
        </div>
    </div>
</section>



<script>
    let tl = gsap.timeline({repeat: -1});
    tl.set('.bulb', {scale: 0});
    tl.set('.light', {opacity: 0});
    tl.set('.scissors', {scale: 0});

    tl.to('.bulb', {
        scale: 1,
        rotation: 405,
        duration: 2,
        ease: 'bounce.out',
    }, 0)

    tl.to('.light', {
        opacity: 1,
        duration: 1,
        ease: 'bounce.inOut',
        stagger: 0.1
    }, 1)

    tl.to('.bulb', {
        scale: 0,
        rotation: -405,
    }, 2)

    tl.to('.scissors', {
        scale: 1,
        rotation: -405,
        duration: 2,
        ease: 'bounce.out',
    }, 3)

    tl.to('.scissors-top', {
        rotation: -24
    }, 4)

    tl.to('.scissors-bottom', {
        rotation: 24
    }, 4)

    tl.to('.scissors-top', {
        rotation: -0
    }, 5)

    tl.to('.scissors-bottom', {
        rotation: 0
    }, 5)
</script>