---
const menu = [
    {
        text: 'Home',
        link: '/'
    },
    {
        text: 'Nosotros',
        link: '/'
    },
    {
        text: 'Clientes',
        link: '/'
    },
]
---

<header class="sticky flex justify-between items-center w-full h-28 px-20">
    <!-- LOGO -->
    <div class="w-1/6 text-3xl font-extrabold">
        ZAR
    </div>

    <!-- MENU -->
    <nav class="flex-1">
        <ul class="flex gap-10 font-bold w-min mx-auto">
            {
                menu.map((item) => (
                    <li class="hover:text-accent-darker transition-all duration-200 ease-linear">
                        <a href={item.link}>{item.text}</a>
                    </li>
                ))
            }
            
        </ul>
    </nav>

    <!-- RIGHT -->
    <div class="w-1/6 flex justify-end">
        <!-- hover:rotate-[360deg] -->
        <button class="flex justify-center items-center gap-2 border-2 border-secondary px-5 py-2.5 bg-secondary text-white rounded-lg hover:scale-105 hover:rotate-12 hover:shadow-lg hover:bg-transparent hover:text-secondary active:scale-100 active:shadow-none transition-all duration-200 ease-linear">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-hand-rock" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M11 11.5v-1a1.5 1.5 0 0 1 3 0v1.5"></path>
                <path d="M17 12v-6.5a1.5 1.5 0 0 1 3 0v10.5a6 6 0 0 1 -6 6h-2h.208a6 6 0 0 1 -5.012 -2.7a69.74 69.74 0 0 1 -.196 -.3c-.312 -.479 -1.407 -2.388 -3.286 -5.728a1.5 1.5 0 0 1 .536 -2.022a1.867 1.867 0 0 1 2.28 .28l1.47 1.47"></path>
                <path d="M14 10.5a1.5 1.5 0 0 1 3 0v1.5"></path>
                <path d="M8 13v-8.5a1.5 1.5 0 0 1 3 0v7.5"></path>
             </svg>
            Contacto
        </div>
    </div>
</header>